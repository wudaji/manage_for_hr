.login {
    width:100%;
    height:100%;
    background:url("../images/login-bg.png") no-repeat center;
    background-size: 100% 100%;  
}

.login-wrap  {
    /* margin-top: 20px; */
    position: absolute; 
    top: 220px;
    right: 200px;
    width:350px;
    height:332px;
    background-color: #ffffff;
    text-align: center;
    border: 1px solid #d6d8d7;   
 }

.login-wrap h2 {   
    margin-top: 38px;
    font-size: 30px;
    color: #01b2a9;
}
.login-wrap span {
   
    font-size: 20px;
    color: #999999;
}
.inp{    
    margin-top: 17px;
    margin-left: 16px; 
}
.hideInput{
    margin: 0;
    padding: 0;
    width: 0 !important;;
    height:0 !important;
    opacity: 0;
    position: fixed;
    left:2000px;
    bottom:0;
}
input:-webkit-autofill { 
    -webkit-box-shadow: 0 0 0px 1000px white inset; 
} 

.inp #user {
    width:314px;
    height:41px;
    box-sizing: border-box;
    padding-left: 55px;
}
.inp #pass {
    margin-top: 5px;
    width:314px;
    height:41px;
    box-sizing: border-box;
    padding-left: 55px;    
}
#send {
    color: #fff;
    background-color: #13c0b2;
    width:314px;
    height:41px;
    border-radius: 5px;
    outline: none;
    
}

.alert {
    width:260px;
    height:20px;
    /* background-color: red; */
    position: absolute;
    top:280px;
    left:28px;
    /* margin-left: -80px; */
    display: none;
    border-radius: 5px;

}

.inp .form-group {
    position: relative;
}

.inp .form-group .form-user {
    display: block;
    background: url("../images/1.png") no-repeat center;
    width: 42px;
    height: 42px;
    position: absolute;
    left: 9px;
    top: 0px;
}

.inp .form-group .form-password {
    display: block;
    background: url("../images/2.png") no-repeat center;
    width: 42px;
    height: 42px;
    position: absolute;
    left: 9px;
    top: 4px;
}